# Example configuration for Feedex News Reader


# Profile name connected with this configuration
# If specified, GUI session will be treated as separate from default
#profile_name = Feedex


# Display language
lang = 


# Path to log file
log = ~/.local/share/feedex/feedex.log

# Path to news SQLite3 database
db_path = ~/.local/share/feedex/feedex.db
# Database timeout
timeout = 120


# Command for openning URLs and Images
browser = xdg-open %u
image_viewer = xdg-open %u

default_rule_weight = 2


# What weight should manually added (not fetched from RSS/HTML/Script) items get
# It will affect ranking. Zero (0) will disable learning on added entries 
default_entry_weight = 2

# Use feature learning at all>
use_keyword_learning = True

# Limit learned rules used for ranking. Can boost performance and precision
rule_limit = 50000

# Use search history for ranking
use_search_habits = True

# Snippet length (to exclude long wildcard matches)
max_context_length = 500

# Don't save search history
no_history = False


# Default depth for query grouping
default_depth = 5


# Limit similarity search results for better performance
default_similarity_limit = 30

# How similarity query should increase entry's importance?
default_similar_weight = 0

# Fetching and WWW connections
error_threshold = 5
default_interval = 45
do_redirects = True
save_perm_redirects = False
mark_deleted = True
ignore_modified = True
user_agent = UniversalFeedParser/5.0.1 +http://feedparser.org/
fetch_timeout = 20  # Timeout for fetching remote resources


# This UA wil be used for resource download if default fails
#fallback_user_agent = Mozilla/5.0 (X11; Linux x86_64; rv:10.0) Gecko/20100101 Firefox/10.0

# GUI options
gui_new_color = #0f0fdadacaca
gui_deleted_color = #bababdbdb6b6
gui_hilight_color = #00000000ffff
gui_desktop_notify = True
gui_fetch_periodically = False
gui_notify_group = feed
gui_notify_depth = 5
gui_default_flag_color = #cccc00000000
gui_key_search = s
gui_key_new_entry = n
gui_key_new_rule = r
gui_layout = 0
gui_orientation = 0

search_engine = https://duckduckgo.com/?t=ffab&q=%Q&ia=web

# Clear cache (thumbnails, temp files) from items older than ...
gui_clear_cache = 30

# Desktop integration options 
# Exclude those strings from window names when adding entry from desktop selection buffer
window_name_exclude = Firefox,firefox,chrome,Chrome,Mozilla,mozilla,Thunderbird,thunderbird

# CLI display beautifiers
# Available colors: WHITE, WHITE_BOLD, YELLOW, YELLOW_BOLD, CYAN, CYAN_BOLD, BLUE, BLUE_BOLD, RED, RED_BOLD, GREEN, GREEN_BOLD, PURPLE, PURPLE_BOLD, LIGHT_RED, LIGHT_RED_BOLD

#normal_color = WHITE
#bold_color = CYAN_BOLD

# Bold markup (e.g. for snippets and contexts
#bold_markup_beg = <b>
#bold_markup_end = </b>

