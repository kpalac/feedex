# FEEDEX configuration file example and description

# Profile name will be displayed in GUI - useful ifB juggling several configuration files 
# We treat each configuration file as a different profile
#profile_name=Default User

# Log file path
log = ~/.local/share/feedex/feedex.log

# Location of SQLite3 db
db_path = ~/.local/share/feedex/feedex.db

# Command to run links.entries in browser. Arguments lik %u, %U, %f, %F are allowed
browser = /usr/bin/firefox --new-tab %u


# Timeout if db is busy/locked
timeout = 5

# Push desktop notificatons on new?
notify = True
# After how many news notifications should summarize?
notify_level = 10 

#Default weight of added keyword and regex rules
default_rule_weight = 2

#Default weight fo rules added from queries with --save parameter
query_rule_weight = 10


# Do not download feed images and images from entries
ignore_images = False

# After how many errors should feed download be skipped?
error_threshold = 5

# Default weight for entries manually added by users (not downloaded)
default_entry_weight = 2

# Default similarity search limit (to improve performance)
default_similarity_limit = 20

# CLI display beautifiers
# Available colors: WHITE, WHITE_BOLD, YELLOW, YELLOW_BOLD, CYAN, CYAN_BOLD, BLUE, BLUE_BOLD, RED, RED_BOLD, GREEN, GREEN_BOLD, PURPLE, PURPLE_BOLD, LIGHT_RED, LIGHT_RED_BOLD

#normal_color = WHITE
#read_color = WHITE_BOLD
#flag_color = YELLOW_BOLD
#bold_color = CYAN_BOLD

# Bold markup (e.g. for snippets and contexts
#bold_markup_beg = <b>
#bold_markup_end = </b>

#GUI
# Colors in gui:

gui_flag_1_color = blue
gui_flag_2_color = blue
gui_flag_3_color = blue
gui_flag_4_color = blue
gui_flag_5_color = blue

gui_new_color = #0f0fdadacaca
gui_deleted_color = #bababdbdb6b6
gui_hilight_color = #0f0fdadacaca

# Notify on incomming news while in gui?
gui_desktop_notify = True

# External image viewer
image_viewer = /usr/bin/feh %u
